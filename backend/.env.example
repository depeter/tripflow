# Application
APP_NAME=TripFlow
DEBUG=True

# Database - Main TripFlow database
DATABASE_URL=postgresql://tripflow:tripflow@localhost:5432/tripflow

# Source databases for sync (configure with your actual database URLs)
SOURCE_DB_PARK4NIGHT=postgresql://user:password@host:5432/park4night
SOURCE_DB_CAMPERCONTACT=postgresql://user:password@host:5432/campercontact
SOURCE_DB_LOCAL_SITES=postgresql://user:password@host:5432/local_sites

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Redis for Celery
REDIS_URL=redis://localhost:6379/0

# Sync configuration
SYNC_ENABLED=True
SYNC_SCHEDULE_HOURS=24

# Authentication
SECRET_KEY=your-secret-key-change-in-production
